<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
         http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet id="20200312T1104" author="tbunyadova">
        <dropColumn tableName="coping_strategy">
            <column name="instructions" />
        </dropColumn>
        <createTable tableName="instruction">
            <column name="instruction_id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="last_modify_date" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="is_deleted" type="boolean" defaultValue="false">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="coping_strategy_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_coping_strategy_instruction" references="coping_strategy(coping_strategy_id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>